---
interface Props {
  name: string;
  imageUrl: string;
  description: string;
}
const { name, imageUrl, description } = Astro.props;
---

<div
  class="relative mt-5 mx-auto overflow-hidden rounded-lg shadow transition hover:shadow-lg w-full max-w-sm"
>
  <img
    alt="Office"
    src={imageUrl ||
      "https://fikrah.sarbeh.com/emoj/clipboard_3d.webp"}
    class="absolute inset-0 h-full w-full object-cover"
  />

  <div
    class="stamp is-nope mask-image absolute top-1/3 left-1/3 transform -translate-x-1/2 -translate-y-1/2"
  >
    BOIKOT
  </div>

  <div
    class="relative bg-gradient-to-t from-gray-900/50 to-gray-900/25 pt-32 sm:pt-48 lg:pt-64"
  >
    <div class="p-4 sm:p-6">
      <a href=`${Astro.url.origin}/product/searchResult?search=${name}`>
        <h3 class="mt-0.5 text-lg text-white">{name || "Nama Standar"}</h3>
      </a>

      <p class="mt-2 text-sm text-white/95">
        {description || "Deskripsi Produk"}
      </p>
    </div>
  </div>
</div>
